<%-include('../includes/head.ejs')%>
    <link rel="stylesheet" href="/css/forms.css" />
    <link rel="stylesheet" href="/css/login.css" />
    </head>
  <body>
    <%-include('../includes/navigation.ejs') %>
    <main>
        <% if(errorMessage) { %>
        <div class="user-message user-message--error"><%= errorMessage %></div>
        <% } %>
        <form class="login-form" action="/login" method="POST" novalidate>
          <div class="form-control">
            <label for="email">E-Mail</label>
            <input
              class="<%= validationErrors.find(e => e.param === 'email') ? 'invalid' : '' %>"
              type="email"
              name="email"
              id="email"
              value="<%= oldInput.email %>" />
              <% if(validationErrors.find(e => e.param === 'email')) { %>
                <span> <%= validationErrors.find(e => e.param === 'email').msg %></span>
              <% } %>
          </div>
            <div class="form-control">
            <label for="password">Password</label>
            <input
              class="<%= validationErrors.find(e => e.param === 'password') ? 'invalid' : '' %>"
              type="password"
              name="password"
              id="password"
              value="<%= oldInput.password %>" />
              <% if(validationErrors.find(e => e.param === 'password')) { %>
                <span> <%= validationErrors.find(e => e.param === 'password').msg %></span>
              <% } %>
          </div>
          <input type="hidden" name="_csrf" value="<%= csrfToken %>" >
          <div class="handle">
            <button class="btn" type="submit">Login</button>
            <a href="/reset" >Reset Password</a>
          </div>
        </form>
    </main>

<%-include('../includes/end.ejs') %>
